# Variables de entorno para CareCenter
# Copia este archivo como .env y configura los valores apropiados para tu entorno

# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================
APP_NAME="CareCenter"
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
BASE_URL=http://localhost/care_center

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=carecenter_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
# Genera una clave secreta fuerte para JWT tokens
JWT_SECRET=tu_clave_secreta_muy_segura_cambiala_en_produccion_ahora_mismo

# Clave para cifrado de sesiones
SESSION_SECRET=otra_clave_secreta_para_sesiones_igualmente_fuerte

# Tiempo de vida de sesión en segundos (2 horas = 7200)
SESSION_LIFETIME=7200

# ==============================================
# CONFIGURACIÓN DE EMAIL
# ==============================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_ENCRYPTION=tls
EMAIL_USERNAME=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM_ADDRESS=noreply@carecenter.com
EMAIL_FROM_NAME="CareCenter"

# ==============================================
# APIS EXTERNAS
# ==============================================
# API Key de Google Maps para geolocalización y rutas
GOOGLE_MAPS_API_KEY=tu_api_key_de_google_maps_aqui

# API Key para servicio de geocodificación (opcional, alternativo a Google Maps)
GEOCODING_API_KEY=

# ==============================================
# CONFIGURACIÓN DE ARCHIVOS
# ==============================================
# Tamaño máximo de archivo en bytes (5MB)
UPLOADS_MAX_SIZE=5242880

# Extensiones de imágenes permitidas (separadas por comas)
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Extensiones de documentos permitidas
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,xls,xlsx

# ==============================================
# CONFIGURACIÓN DE LOGS
# ==============================================
# Nivel de logs: debug, info, warning, error, critical
LOG_LEVEL=debug
LOG_FILE=app.log

# Rotación de logs: tamaño máximo en MB antes de rotar
LOG_MAX_SIZE=10

# Días que mantener logs archivados
LOG_RETENTION_DAYS=30

# ==============================================
# CONFIGURACIÓN DE CACHÉ
# ==============================================
# Habilitar caché de vistas y datos
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600

# ==============================================
# CONFIGURACIÓN DE BACKUP
# ==============================================
# Directorio para backups automáticos de base de datos
BACKUP_PATH=storage/backups

# Frecuencia de backup automático en horas
BACKUP_FREQUENCY=24

# ==============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==============================================
# Webhook URL para notificaciones críticas (Slack, Discord, etc.)
WEBHOOK_URL_CRITICAL=

# Número de teléfono para SMS críticos (opcional)
SMS_PHONE_CRITICAL=

# ==============================================
# CONFIGURACIÓN DE DESARROLLO
# ==============================================
# Mostrar errores detallados (solo en desarrollo)
DISPLAY_ERRORS=true

# Habilitar modo de depuración SQL
DEBUG_SQL=false

# Simular servicios externos en desarrollo
MOCK_EXTERNAL_SERVICES=false

# ==============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==============================================
# Habilitar HTTPS en producción
FORCE_HTTPS=false

# Dominio para cookies (importante en producción)
COOKIE_DOMAIN=

# Configuración de CORS para APIs
CORS_ALLOWED_ORIGINS=*

# ==============================================
# MÉTRICAS Y MONITOREO
# ==============================================
# Habilitar recolección de métricas
METRICS_ENABLED=false

# URL para envío de métricas
METRICS_ENDPOINT=

# ==============================================
# CONFIGURACIÓN DE PAGOS (FUTURO)
# ==============================================
# Stripe API Keys (para integración futura de pagos)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal configuración (alternativa)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox