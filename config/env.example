# ====================================================================
# CONFIGURACIÓN DE ENTORNO PARA CARECENTER
# ====================================================================
# Instrucciones:
# 1. Copia este archivo como .env en la raíz del proyecto
# 2. Configura los valores según tu entorno
# 3. NUNCA subas el archivo .env a git (está en .gitignore)

# ====================================================================
# APLICACIÓN
# ====================================================================
APP_NAME="CareCenter"
APP_VERSION="1.0.0"
APP_ENV="development"
APP_DEBUG=true
APP_TIMEZONE="America/Mexico_City"
BASE_URL="http://localhost/care_center"

# ====================================================================
# BASE DE DATOS
# ====================================================================
DB_CONNECTION="mysql"
DB_HOST="localhost"
DB_PORT=3306
DB_NAME="carecenter_db"
DB_USERNAME="root"
DB_PASSWORD=""
DB_CHARSET="utf8mb4"
DB_COLLATION="utf8mb4_unicode_ci"

# ====================================================================
# SEGURIDAD Y AUTENTICACIÓN
# ====================================================================
# Genera claves seguras para producción: https://www.allkeysgenerator.com/Random/Security-Encryption-Key-Generator.aspx
JWT_SECRET="cambiar_por_clave_segura_de_32_caracteres_minimo"
SESSION_SECRET="otra_clave_segura_para_sesiones_de_32_caracteres"
ENCRYPTION_KEY="clave_para_encriptacion_de_datos_sensibles"

# Configuración de sesiones
SESSION_DRIVER="file"
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME="carecenter_session"
SESSION_SECURE_COOKIE=false

# ====================================================================
# CORREO ELECTRÓNICO
# ====================================================================
MAIL_DRIVER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME="tu_email@gmail.com"
MAIL_PASSWORD="tu_app_password_de_gmail"
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@carecenter.local"
MAIL_FROM_NAME="CareCenter System"

# ====================================================================
# SERVICIOS EXTERNOS Y APIs
# ====================================================================
# Google Maps para geolocalización y rutas
GOOGLE_MAPS_API_KEY=""

# Servicio de geocodificación alternativo
NOMINATIM_API_URL="https://nominatim.openstreetmap.org"

# ====================================================================
# ARCHIVOS Y UPLOADS
# ====================================================================
# Tamaño máximo de archivos en bytes (5MB)
MAX_FILE_SIZE=5242880

# Tipos de archivos permitidos
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,gif,webp"
ALLOWED_DOCUMENT_TYPES="pdf,doc,docx,xls,xlsx"

# Rutas de archivos
UPLOADS_PATH="/uploads"
STORAGE_PATH="/storage"

# ====================================================================
# LOGGING Y DEPURACIÓN
# ====================================================================
LOG_LEVEL="info"
LOG_CHANNEL="daily"
LOG_MAX_FILES=30
LOG_MAX_SIZE=10485760

# Habilitar query logging (solo desarrollo)
DB_LOG_QUERIES=false

# ====================================================================
# CACHÉ Y PERFORMANCE
# ====================================================================
CACHE_DRIVER="file"
CACHE_PREFIX="carecenter"
CACHE_TTL=3600

# Habilitar compresión de assets
ASSETS_COMPRESSION=true
ASSETS_MINIFICATION=false

# ====================================================================
# CONFIGURACIÓN DE DESARROLLO
# ====================================================================
# Mostrar errores detallados
DISPLAY_ERRORS=true
ERROR_REPORTING="E_ALL"

# Modo de mantenimiento
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistema en mantenimiento. Volveremos pronto."

# ====================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ====================================================================
# Forzar HTTPS en producción
FORCE_HTTPS=false

# Configuración de CORS
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="*"

# ====================================================================
# NOTIFICACIONES Y ALERTAS
# ====================================================================
# Webhook para notificaciones críticas (Slack, Discord, etc.)
WEBHOOK_CRITICAL_URL=""

# Configuración para SMS (futuro)
SMS_PROVIDER=""
SMS_API_KEY=""
SMS_FROM_NUMBER=""

# ====================================================================
# MÉTRICAS Y MONITOREO
# ====================================================================
METRICS_ENABLED=false
ANALYTICS_ID=""

# ====================================================================
# CONFIGURACIÓN ESPECÍFICA DE CARECENTER
# ====================================================================
# Configuración de entregas
DEFAULT_DELIVERY_TIME=60
MAX_DELIVERY_DISTANCE=50
DELIVERY_COST_PER_KM=5.00

# Configuración de cocina
KITCHEN_PREP_TIME_BUFFER=15
MAX_ORDERS_PER_SLOT=10

# Configuración de nutrición
DEFAULT_CALORIE_TARGET=2000
MACRO_TOLERANCE_PERCENT=10